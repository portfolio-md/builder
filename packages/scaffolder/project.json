{
  "name": "scaffolder",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/scaffolder/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/scaffolder",
        "main": "packages/scaffolder/src/index.ts",
        "tsConfig": "packages/scaffolder/tsconfig.lib.json",
        "assets": ["packages/scaffolder/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs scaffolder {args.ver} {args.tag}",
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
