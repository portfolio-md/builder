{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio.md/configuration": [
        "packages/configuration/src/index.ts"
      ],
      "@portfolio.md/scaffolder": [
        "packages/scaffolder/src/index.ts"
      ],
      "@portfolio.md/templates": [
        "packages/templates/src/index.ts"
      ],
      "@portfolio.md/builder": [
        "engine/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}